@model MVC_Project_8th_Module.Models.RegisterViewModel

@{
    ViewBag.Title = "- - -  Sing Up  - - -";
}
<link href="~/StyleSheet.css" rel="stylesheet" />

<div id="divReg">

    <h3>@ViewBag.Title.</h3>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account  - - -</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="input-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="input-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="input-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="input-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="input-group">
            @Html.LabelFor(m => m.Confirm_Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Confirm_Password, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="input-group">
            @Html.LabelFor(m => m.Password_hint, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Password_hint, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="input-group">
            @{ List<MVC_Project_8th_Module.Models.RegisterViewModel> tmpList = (List<MVC_Project_8th_Module.Models.RegisterViewModel>)ViewBag.RoleList; }

            @Html.LabelFor(m => m.Roles, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("Roles", tmpList.Select(item => new SelectListItem { Value = item.Roles, Text = item.Roles }), "--Select Role--", new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Sign Up" />
            </div>
        </div>

        <p>
            <h3>@Html.ActionLink("Already have a account", "Login")</h3>
        </p>
    }


</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
